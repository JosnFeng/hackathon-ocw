# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

# Home page
GET     /                           controllers.Application.index
GET     /user/:id/Candidates        controllers.Application.getCandidates(id: Long)
POST    /user/:id/Preferences       controllers.Preferences.add(id: Long)
GET     /users                      controllers.Users.list
POST    /user                       controllers.Users.add
PATCH   /user/:id                   controllers.Users.update(id: String)

# Map static resources from the /public folder to the /assets URL path
GET     /assets/*file               controllers.Assets.versioned(path="/public", file: Asset)
