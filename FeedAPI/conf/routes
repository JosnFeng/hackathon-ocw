# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

# Home page
GET     /                           controllers.Application.index
GET     /user/:id/candidates        controllers.Application.getCandidates(id: Long)
POST    /crashes                    controllers.Application.addCrashReport
POST    /user/:id/preferences       controllers.Preferences.add(id: Long)
GET     /users                      controllers.Users.list
POST    /user                       controllers.Users.register
PATCH   /user/:id                   controllers.Users.update(id: Long)
POST    /user/:id/comments			controllers.Comments.add(id: Long)

# Map static resources from the /public folder to the /assets URL path
GET     /assets/*file               controllers.Assets.versioned(path="/public", file: Asset)
